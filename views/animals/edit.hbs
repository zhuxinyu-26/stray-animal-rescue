<div class='colored-page'>
<h2>Edit Information</h2>


<form method='POST'>

    <input type='text' name='name' id='name' placeholder='Name'value='{{animal.name}}' required />

    <select name='species' id='species' required>
     {{#each species}}  
        {{selectOption this.species ../animal.species}}
      {{/each}}</select>

    <input type='number' name='age' id='age' placeholder='Age'value='{{animal.age}}' />

    <input type='text' name='color' id='color' placeholder='Color' value='{{animal.color}}'/>

    <textarea
      name='comments'
      id='comments'
      placeholder="What's Special About This Pet?"
    >{{animal.comments}}</textarea>

    <input class='btn btn-primary' type='submit' value='Create' />
  </form>
  <div class='white'>
    <img
      class='dog-cat-dog'
      src='/images/cat-dog.png'
      alt='dog and cat image'
    /></div></div>